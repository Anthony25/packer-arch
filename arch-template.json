{
    "variables": {
        "iso_url": "https://mirrors.kernel.org/archlinux/iso/latest/archlinux-{{isotime \"2006.01\"}}.01-x86_64.iso",
        "iso_checksum_url": "https://mirrors.kernel.org/archlinux/iso/latest/sha1sums.txt",
        "iso_checksum_type": "sha1",
        "ssh_timeout": "20m",
        "boot_wait": "5s",
        "post_bootloader_wait": "25s",
        "headless": "true",
        "disk_size": "5120",
        "format": "qcow2",
        "hostname": "localhost",
        "http_port_min": "8000",
        "http_port_max": "9000",
        "ssh_host_port_min": "2222",
        "ssh_host_port_max": "4444",
        "authorized_keys": "",
        "ip4": "",
        "ip6": "",
        "mirrorlist": ""
    },
    "builders": [
        {
            "type": "qemu",
            "iso_url": "{{ user `iso_url` }}",
            "iso_checksum_url": "{{ user `iso_checksum_url` }}",
            "iso_checksum_type": "{{ user `iso_checksum_type` }}",
            "http_directory": "srv",
            "boot_wait": "{{ user `boot_wait` }}",
            "shutdown_timeout": "30s",
            "ssh_username": "packer",
            "ssh_password": "packer",
            "http_port_min": "{{ user `http_port_min` }}",
            "http_port_max": "{{ user `http_port_max` }}",
            "ssh_host_port_min": "{{ user `ssh_host_port_min` }}",
            "ssh_host_port_max": "{{ user `ssh_host_port_max` }}",
            "ssh_timeout": "{{ user `ssh_timeout` }}",
            "boot_command": [
                "<enter><wait{{ user `post_bootloader_wait` }}>",
                "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh<enter><wait5>",
                "bash ./enable-ssh.sh<enter>"
             ],
            "disk_size": "{{ user `disk_size` }}",
            "format": "{{ user `format` }}",
            "vm_name": "{{ user `hostname` }}.{{ user `format` }}",
            "shutdown_command": "sudo shutdown -h now",
            "headless" : "{{ user `headless`}}"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "conf",
            "destination": "/home/packer/conf"
        },
        {
            "type": "shell",
            "execute_command": "{{ .Vars }} AUTHORIZED_KEYS='{{ user `authorized_keys` }}' IP4='{{ user `ip4` }}' IP6='{{ user `ip6` }}' MIRRORLIST='{{ user `mirrorlist` }}' sudo -E -S bash '{{ .Path }}'",
            "script": "scripts/install-base.sh"
        }
    ]
}
